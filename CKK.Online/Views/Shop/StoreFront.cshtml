@model Store
@{
    ViewData["Title"] = "StoreFront";
}
<div class="text-lg-start">
    <h1 class=" = display-4">Products and Services</h1>
</div>
<form method="post">
    <input type="hidden" value="@Model.StoreFront.Products" />
    <div class="row">
        @foreach (var item in Model.StoreFront.Products.GetAll())
        {
            <partial name="_ProductCard" model="item" />
        }
    </div>
    <a id="ViewCartBtn" asp-controller="Shop" asp-action="Index" class="btn btn-success btn-lg btn-block">View Shopping Cart</a>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js"></script>
<script>
    $("input[type='number']").inputSpinner();

    $(".num-spinner").on("change", function (event) {
        ClickPlus(event.target.id.substring(8), event.target.value);
        return false;
    });

    function ClickPlus(productId, quantity) {
        console.log(productId + " item was clicked. The quantity is: " + quantity);
        $.get(
            {
                url: window.location.href + "/Add/" + productId + "?" + "quantity=" + quantity,
                success: function (result) {
                    $("#CheckoutBtn").text("Check Out - " + result);
                }
            });
    }
</script>